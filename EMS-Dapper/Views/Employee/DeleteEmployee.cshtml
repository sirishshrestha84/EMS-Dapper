@model Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<h2>Delete Employee</h2>

<h3>Are you sure you want to delete the following employee</h3>
<div>
    <h4>@Model.EmployeeName</h4>
    <p><strong>Department:</strong>@Model.DepartmentName</p>
    <p><strong>Designation:</strong>@Model.DesignationName</p>
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
