@model Designation

@{
    ViewData["Title"] = "Delete Designation";
}

<h2>Delete Designation</h2>

<h3>Are you sure you want to delete the following designation?</h3>
<div>
    <h4>@Model.DesignationName</h4>
</div>

<form method="post" asp-action="Delete" asp-route-id="@Model.DesignationId">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

