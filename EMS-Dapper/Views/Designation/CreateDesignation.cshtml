@model Designation

<h1>Add New Designation</h1>

<form asp-controller="Designation" asp-action="CreateDesignation" method="POST">
    <div class="form-group">
        <label asp-for="DesignationName"></label>
        <input asp-for="DesignationName" class="form-control" required />
        <span asp-validation-for="DesignationName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add Designation</button>
    </div>
</form>

