@model List<Department>

<h1>Departments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Department ID</th>
            <th>Department Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Department in Model)
        {
            <tr>
                <td>@Department.DepartmentId</td>
                <td>@Department.Name</td>
                <td><a asp-controller="Department" asp-action="EditDepartment" asp-route-id="@Department.DepartmentId">Update</a></td>
                <td><a asp-controller="Department" asp-action="DeleteDepartment" asp-route-id="@Department.DepartmentId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateDepartment" class="btn btn-primary">Add New Department</a>
