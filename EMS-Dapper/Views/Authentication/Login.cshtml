@{
    ViewBag.Title = "Employee Login";
}
<h2>Login</h2>

<form asp-controller = "Authentication" asp-action = "Login" method="post">
    <input type="email" name="useremail" placeholder="Email" required /><br />
    <input type="password" name="userpassword" placeholder="Password" required /><br />
    <button type="submit">Login</button>
    <a asp-controller="Authentication" asp-action="Register">Register</a>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}
